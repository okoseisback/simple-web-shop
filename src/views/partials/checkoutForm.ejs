<main class="page">
  <section class="payment-form dark">
    <div class="container">
      <div class="block-heading">
        <h2>Checkout</h2>
        <p>To purchase the product of your choice, fill out the form below and make your payment.</p>
      </div>
      <form action="/purchase" method="POST">
        <input type="hidden" id="productId" name="productId" value="<%= product.id %>" />
        <div class="products">
          <h3 class="title">Product</h3>
          <div class="item">
            <span class="price">
              <%= product.price %>â‚¬
            </span>
            <p class="item-name">
              <%= product.name %>
            </p>
            <p class="item-description">Brand: <%= product.brand.name %>
            </p>
          </div>
        </div>
        <div class="card-details">
          <h3 class="title">Customer Details</h3>
          <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" id="name" name="name" required>
          </div>
          <div class="form-group">
            <label for="address">Address:</label>
            <input type="text" class="form-control" id="address" name="address" required>
          </div>
          <div class="form-group">
            <label for="shipping">Shipping:</label>
            <select class="form-control" id="shippingId" name="shippingId">
              <% shippingOptions.forEach((shippingOption, index)=> { %>
                <option value="<%= shippingOption.id %>">
                  <%= shippingOption.description %>
                </option>
                <% }); %>
            </select>
          </div>
        </div>
        <div class="card-details">
          <h3 class="title">Credit Card Details</h3>
          <div class="row">
            <div class="form-group col-sm-7">
              <label for="card-holder">Card Holder</label>
              <input id="card-holder" name="ccHolder" type="text" class="form-control" placeholder="Card Holder"
                aria-label="Card Holder" aria-describedby="basic-addon1" required>
            </div>
            <div class="form-group col-sm-5">
              <label for="">Expiration Date</label>
              <div class="input-group expiration-date">
                <input type="text" class="form-control" name="ccExpMonth" placeholder="MM" aria-label="MM" aria-describedby="basic-addon1"
                  required>
                <span class="date-separator">/</span>
                <input type="text" class="form-control" name="ccExpYear" placeholder="YY" aria-label="YY" aria-describedby="basic-addon1"
                  required>
              </div>
            </div>
            <div class="form-group col-sm-8">
              <label for="card-number">Card Number</label>
              <input id="card-number" type="text" name="ccNo" class="form-control" placeholder="Card Number"
                aria-label="Card Holder" aria-describedby="basic-addon1" required>
            </div>
            <div class="form-group col-sm-4">
              <label for="cvc">CVC</label>
              <input id="cvc" type="text" class="form-control" name="ccCvc" placeholder="CVC" aria-label="Card Holder"
                aria-describedby="basic-addon1" required>
            </div>
            <div class="form-group col-sm-12">
              <button type="submit" class="btn btn-primary btn-block">Proceed</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </section>
</main>