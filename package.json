{
  "name": "simple-web-shop",
  "version": "1.0.0",
  "description": "Powered by OKTAY KÖSE(okoseisback@gmail.com)",
  "main": "dist/src/application/index.js",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --exec ts-node -r tsconfig-paths/register src/application/index.ts | pino-pretty",
    "build": "rimraf dist/* && cross-env NODE_ENV=production tsc && tsc-alias && ts-node tools/copyAssets",
    "start": "node dist/src/application/index.js",
    "test": "jest",
    "test:cov": "npm run test --coverage --watchAll",
    "test:watch": "npm run  test --watchAll",
    "db:mig:init": "prisma migrate dev --name init",
    "db:mig:deploy": "prisma migrate deploy",
    "db:mig:reset": "prisma migrate reset",
    "db:gen": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "ts-node-dev prisma/seed.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "npm run lint --fix"
  },
  "author": "Oktay KÖSE(okoseisback@gmail.com)",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.13.0",
    "@types/nodemailer": "^6.4.15",
    "body-parser": "^1.20.2",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "nodemailer": "^6.9.13",
    "nodemailer-mailgun-transport": "^2.1.5",
    "pg": "^8.11.5",
    "prisma": "^5.13.0",
    "shelljs": "^0.8.5",
    "zod": "^3.23.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.10",
    "@types/shelljs": "^0.8.15",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^48.2.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "prisma": "^5.12.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  }
}
